server {
    listen 80;
    server_name map.com.org www.map.com;

    location ~ /(\.|cron|lib|LICENSE|config)
    {
        return 444;
    }
    location ~* \.(conf|md|sql)
    {
        return 444;
    }

    rewrite ^/raw_data$ /raw_data.php?$1 last;
    rewrite ^/motd_data$ /motd_data.php?$1 last;
    rewrite ^/submit /submit.php?$1 last;
    rewrite ^/search /search.php?$1 last;
    rewrite ^/weather_data$ /weather_data.php?$1 last;
    rewrite ^/serviceWorker.min.js$ /static/dist/js/serviceWorker.min.js last;
    rewrite ^/user$ /user.php?$1 last;
    rewrite ^/discord-login$ /discord-login.php?$1 last;

    #charset koi8-r;

    error_log /var/log/nginx/error.log warn;

    #access_log  logs/host.access.log  main;

    location / {
        include /etc/nginx/mime.types;
        root /var/www/html/Tallahassee;
        index oauth.php index.html index.htm;
    }

    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
    }

    location ~ \.php$ {
        root /var/www/html/Tallahassee;
        try_files $uri =404;
        fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
        fastcgi_index oauth.php;
        fastcgi_param HTTP_IF_NONE_MATCH $http_if_none_match;
        fastcgi_param HTTP_IF_MODIFIED_SINCE $http_if_modified_since;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    location ~ /\.ht {
        deny all;
    }

    location /login {
        proxy_pass http://localhost:7770/login;
    }

    location /subscribe {
        proxy_pass http://localhost:7770/subscribe;
    }

    location /unsubscribe {
        proxy_pass http://localhost:7770/subscribe;
    }

    location /unsubscribed {
        proxy_pass http://localhost:7770/unsubscribed;
    }

    location /success {
        proxy_pass http://localhost:7770/success;
    }

    location /webhook {
        proxy_pass http://localhost:7770/webhook;
    }

    location /fp {
        proxy_pass http://localhost:7770/fp;
    }

    location /device {
        proxy_pass http://localhost:7770/device;
    }

    location /error {
        proxy_pass http://localhost:7770/error;
    }

    location /blocked {
        proxy_pass http://localhost:7770/blocked;
    }
}
